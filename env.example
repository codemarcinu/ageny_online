# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_STRICT=10/minute

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_organization_id_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Mistral Configuration
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-small-latest
MISTRAL_MAX_TOKENS=1000
MISTRAL_TEMPERATURE=0.7

# Azure Vision Configuration
AZURE_VISION_KEY=your_azure_vision_key_here
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_REGION=your_azure_region_here

# Google Vision Configuration
GOOGLE_VISION_PROJECT_ID=your_google_cloud_project_id_here
GOOGLE_VISION_CREDENTIALS_PATH=path/to/your/service-account-key.json

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=gcp-starter

# Weaviate Configuration
WEAVIATE_URL=https://your-weaviate-instance.weaviate.network
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_USERNAME=your_weaviate_username_here
WEAVIATE_PASSWORD=your_weaviate_password_here

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@localhost/ageny_online

# Logging Configuration
LOG_LEVEL=INFO

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Cost Tracking
ENABLE_COST_TRACKING=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=10
BATCH_TIMEOUT=300

# Provider Priority Configuration
LLM_PROVIDER_PRIORITY=["openai", "mistral"]
OCR_PROVIDER_PRIORITY=["azure_vision", "google_vision"]
VECTOR_STORE_PRIORITY=["pinecone", "weaviate"] 